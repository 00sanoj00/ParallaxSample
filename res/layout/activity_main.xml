<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_gravity="center"
    android:layout_height="800dp"
    tools:context="lk.droidlanka.sanoj.parallaxsample.MainActivity">


        <lk.droidlanka.sanoj.parallaxsample.ParallaxView
            android:id="@+id/parallax_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/backk" />

        <lk.droidlanka.sanoj.parallaxsample.ParallaxView
            android:id="@+id/parallax_view_2"
            android:layout_width="800dp"
            android:layout_height="800dp"
            android:layout_gravity="center"
            android:background="@drawable/midlk" />

    <lk.droidlanka.sanoj.parallaxsample.ParallaxView
        android:id="@+id/parallax_view_3"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:background="@drawable/topk" />


</FrameLayout>

